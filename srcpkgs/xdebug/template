# Template file for 'xdebug'
pkgname=xdebug
version=2.3.3
revision=1
build_style=gnu-configure
hostmakedepends="php-devel autoconf"
makedepends="php"
short_desc="PHP Debugger"
maintainer="Asaf Ohayon <asaf.tvn@gmail.com>"
license="The Xdebug License, version 1.01"
homepage="http://xdebug.org"
distfiles="http://xdebug.org/files/$pkgname-$version.tgz"
checksum="b27bd09b23136d242dbc94f4503c98f012a521d5597002c9d463a63c6b0cdfe3"


pre_configure()
{
	phpize
}

do_install()
{
	cd ${wrksrc}
	make INSTALL_ROOT=${DESTDIR} install
}
