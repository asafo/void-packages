# Template file for 'youtube-dl'
pkgname=youtube-dl
version=2016.02.22
revision=1
noarch=yes
build_style=python-module
wrksrc="${pkgname}"
hostmakedepends="python"
depends="python"
pycompile_module="youtube_dl"
short_desc="Small CLI program to download videos from YouTube and other sites"
maintainer="Juan RP <xtraeme@voidlinux.eu>"
homepage="http://rg3.github.com/youtube-dl/"
license="Public Domain"
distfiles="https://yt-dl.org/downloads/${version}/${pkgname}-${version}.tar.gz"
checksum=14cf17af94a23d451c1c8d2fcc8ee072ee99746d6bc7487c91043498599d630a

post_install() {
	rm -rf ${DESTDIR}/usr/etc
	vinstall ${pkgname}.bash-completion 644 usr/share/bash-completion/completions ${pkgname}
	vinstall ${pkgname}.zsh 644 usr/share/zsh/site-functions _${pkgname}
	vinstall ${pkgname}.fish 644 usr/share/fish/completions ${pkgname}
}
